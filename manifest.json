{
  "manifest_version": 2,
  "name": "Encrypted Messenger",
  "description": "Encrypt your messenger chats with GPG!",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  // "background": {
  //   "scripts": ["background.js"],
  //   "persistent": false
  // }
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}